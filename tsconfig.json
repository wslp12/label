{
  "compilerOptions": {
    "target": "es5", // ts->js 컴파일 과정에서 어떤 js 형식으로 컴파일을 진행 할 것인지에 대한 설정
    "esModuleInterop": true, // CommonJS/AMD/UMD 모듈을 es6 모듈형태로 취급하여 동작 시킵니다
    "importHelpers": true, // 위 esModuleInterop 활성화 될 경우 변환된 import 구문을 더 읽기 쉬운 형태로 컴파일하여 보여 줍니다
    "jsx": "react-jsx",
    "sourceMap": true,
    "strict": true,
    "module": "ESNext", // ts -> js 컴파일 과정에서 모듈형식을 어떻게 지정할 것인지에 대한 여부
    "moduleResolution": "Node"
  }
}
